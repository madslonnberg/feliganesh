{{#author}}
    <div class="profile"> 
        <img class="cover" src="{{cover}}" alt="">
        <div class="content grid">                        
            <div class="image" style="background-image:url('{{image}}')"></div>
            
            
            <h3 class="name">{{name}}</h3>
            <p class="location "><span class="fa fa-map-marker"></span>{{location}}</p>
            
            <h3>Bio</h3>
            <p class="bio ">{{bio}}</p>

            <div class="icons">
                <a href="https://www.linkedin.com/in/mads-l%C3%B8nnberg-00243258">
                    <div class="fa fa-linkedin">        
                    </div>
                </a>
                <a href="https://www.facebook.com/noddemanden?fref=ts">
                    <div class="fa fa-facebook ">
                    </div>
                </a>
            </div>  
        </div>
    </div>
{{/author}}   
    
