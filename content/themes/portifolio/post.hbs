<!DOCTYPE html>
<html>
{{> head}}

<body>
  {{> header title=this.post.title}}

  <main>
    {{#post}}
    <div class="hero" style="background:url('{{image}}') no-repeat center center; background-size:cover">
      <div class="grid">
        <h1 class="title"> 
            {{title}}
          </h1>
      </div>
    </div>
    <div class="grid">
      <div class="text-content">{{content}}</div>
    </div>
    {{/post}}

    <section class='blog'>
      <svg class="top" x="0px" y="0px" viewBox="0 0 1096.3 60.6" style="enable-background:new 0 0 1096.3 60.6 ;">

          <polygon class="triangle" points="0,45.6 1096.3,0 1096.3,45.6 "/>
        </svg>
      <div class="content ">

        <div class="grid">
          <h2 class="label">blog</h2>
          <div class="hide-for-822-up">
            {{> blogItems maxItems="3"}}
          </div>
          <div class="show-for-822-up">
            {{> blogItems maxItems="4"}}
          </div>



        </div>

      </div>

    </section>
  </main>
  <footer>

    <div class="grid">
      <ul class="social">
        <li class="fa fa-facebook"></li>
        <li class="fa fa-linkedin"></li>
        <li class="fa fa-twitter"></li>
      </ul>
    </div>

  </footer>
</body>

</html>