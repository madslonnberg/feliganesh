<body id="blog">
{{> blog-aside}} 

  <main id="post"> 
    

    <div class="grid content">
      <header>
         {{>blog-navigation}}
      </header>
      <div class="text">
        <img src="{{image}}" alt="">
        <div class="content">
          <h1 class="title">{{title}}</h1>
          <h5 class="date">{{date published_at format=" DD/MMM/YYYY"}}</h5>

          <div class="text">
            {{content}}            
          </div>

        </div>

      </div>
      <div class="footer">
        {{#author}}
          <div class="img" style="background-image: url('{{image}}');"></div>
          <div class="author-details">
            <div class="content">
                <h4 class="name"><a href="{{url}}">{{name}}</a></h4>            
                <p class="small description hide-for-420-up" data-characters="30">{{bio}}</p>
                <p class="small description show-for-420-up hide-for-700-up" data-characters="100">{{bio}}</p>
                <p class="description show-for-700-up">{{bio}}</p>
                <div class="more small"><a href="{{url}}">more </div>
            </div>
          </div>
        {{/author}}
      </div>
      <div id="disqus_thread">
        <a href=""></a>
      </div>
      <footer>
        {{>blog-navigation}}
      </footer>
    </div>
    

    

  </main>


  <div class="metadata" style="display: none">
    <div class="post-id">{{id}}</div>
    <div class="post-title">{{title}}</div>
  </div>
  
</body>

<script>
  $(document).ready(function(){

    limitWords();
   
    function limitWords(){
      var selector = $("[data-characters]");

      selector.each(function(index, element){

        var $element = $(element);  
        var limit = Number($element.data('characters'))
        var newText = $element.text().substring(0, limit) + '...' ;

        $element.text(newText);
      });

    }


  })
</script>

