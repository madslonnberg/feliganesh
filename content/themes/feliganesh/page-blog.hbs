<!DOCTYPE html>
<html>
    {{> head}}
    <body id="blog" ng-app="masonryModule">
        {{> blog-aside}}

        <main>
            <div class="grid ">
                <div class="masonry">
                    <div class="sizer"></div>
                    <div class="gutter"></div>
    
                    {{#get "posts" filter="tags:[blog]" include="author" as |recents| }}
                        {{#foreach recents}}
                            
                            <div class="item {{#if featured}}big{{/if}}" >
                                <a href="{{url}}">
                                    <img src="{{image}}" >
                                    <div class="text">
                                        <h3 class="title">{{title}}</h3>
                                        <span class="author small">by {{author.name}}</span>
                                        <p class="content">
                                            {{excerpt}}
                                        </p>
                                        <div class="bar">
                                            <span class="heart">
                                            3 <span class="fa fa-heart"></span>
                                            </span>
                                            <span class="comment">
                                            10 <span class="fa fa-comment"></span>
                                            </span>
                                        </div>
                                    </div>
                                </a>
                            </div>
                        {{/foreach}}            
                    {{/get}}  


                    
                </div>
            </div>
        </main> 
    
    </body>
</html>