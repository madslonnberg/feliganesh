<!DOCTYPE html>
<html>
  {{> head}}
  <body id="blog" ng-app="masonryModule">
    {{>blog-aside}}
    <main id="author">
        <div class="grid wrapper">
            {{#author}}
                <div class="profile">                    
                    <img class="cover" src="{{cover}}" alt="">
                    <div class="content grid">                        
                        <div class="image" style="background-image:url('{{image}}')"></div>
                        
                        
                        <h3 class="name">{{name}}</h3>
                        <p class="location "><span class="fa fa-map-marker"></span>{{location}}</p>
                        
                        <h3>Bio</h3>
                        <p class="bio ">{{bio}}</p>

                        <div class="icons">
                            <div class="fa fa-linkedin"></div>
                            <div class="fa fa-facebook "></div>
                            <div class="fa fa-twitter"></div>
                        </div>  
                    </div>                                    
                </div>

                <div class="articles">
                    <h1 class="title">Forfatterens artiklen</h1>
                    <div class="masonry">
                        <div class="sizer"></div>
                        <div class="gutter"></div>
                        {{#get "posts" filter="author:{{slug}}+tags:[blog]" include="author"}}
                            {{#foreach posts}}  
                                {{> "loop" posts=posts words="20"}}
                            {{/foreach}}
                        {{/get}}
                    </div>
                </div>  
            {{/author}}     
        </div>
    </main>
  </body>
</html>
